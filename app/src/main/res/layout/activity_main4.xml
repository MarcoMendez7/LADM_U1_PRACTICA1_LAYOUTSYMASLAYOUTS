<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/grisClaro"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/borde"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="fitXY"
                android:src="@drawable/corea" />

            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="85dp"
                android:src="@drawable/fuego" />
            <ImageView
                android:id="@+id/imageview3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="85dp"
                android:src="@drawable/ruby" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textAlignment="center"
                android:layout_marginTop="25dp"

                android:textColor="@color/rojo"
                android:textSize="20dp"
                android:textStyle="italic">

            </TextView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="150dp"
            android:background="@drawable/primero" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/segundo"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="@drawable/tercero"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/cuarto"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="@drawable/seis"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/siete"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ocho"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/nueve"
                />
        </LinearLayout>
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/borde"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/aros" />

            <ImageView
                android:id="@+id/imageview5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:src="@drawable/pesa" />
     <ImageView
         android:id="@+id/imageview6"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:scaleType="fitXY"
         android:layout_marginLeft="20dp"
         android:layout_gravity="center"
         android:src="@drawable/hombre" />
     <ImageView
         android:id="@+id/imageview7"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:scaleType="fitXY"
         android:layout_marginLeft="20dp"
         android:layout_gravity="center"
         android:src="@drawable/shield" />
     <ImageView
         android:id="@+id/imageview8"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:scaleType="fitXY"
         android:layout_marginLeft="20dp"
         android:layout_gravity="center"
         android:src="@drawable/tienda" />
 </LinearLayout>

    </LinearLayout>




</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>